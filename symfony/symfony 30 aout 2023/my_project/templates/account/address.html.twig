{% extends 'base.html.twig' %}

{% block title %}Mes address - la boutique française {% endblock %}

{% block content %}
    
<div class='row'>   
    <div class="card">
      <div class="card-body">
        <blockquote class="blockquote">
          <h1> Mes addresses </h1>
          <footer class="card-blockquote"><cite title="Source title text-sm">L'attitude d'un auteur, quand il écrit pour le théâtre, doit être affective avant d'être intellectuelle car tout le théâtre s'adresse à l'émotion avant tout.</cite></footer>
        </blockquote>
      </div>
    </div>

    <h4 class='mt-4 mb-4'>Paramètre</h4>

    <div class="list-group">
          <a href="{{path('app_account')}}" class="list-group-item list-group-item-action list-group-item-info">Mom compte</a>
          <a href="{{path('app_account_add_address')}}" class="list-group-item list-group-item-action list-group-item-info">Ajouter une addresse</a>
    </div>
    <div class="mt-4 mb-4">
        {% if app.user.addresses | length == 0 %}
            <p class="no-adress text-center">Vous n'avez pas encore ajouté d'addresse dans votre compte client. Pour en ajouter une, veuillez <a href="{{path('app_account_add_address')}}">cliquer ici</a></p>
        {% else %}
            <div class ="row">
                    {% for address in app.user.addresses %}
                              <div class="col-md-4">
                                    <div class="card" style="width: 18rem;">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ address.name }}</h5>
                                            <p class="card-text">
                                                {{ address.address }} <br>
                                                {{ address.postal }} - {{ address.city }} - {{ address.country }}
                                            </p>
                                            <a href="{{ path('app_account_edit_address', {'id':address.id }) }}" class="btn btn-outline-dark">Modifier</a>  <a href="{{ path('app_account_delete_address', {'id':address.id }) }}" class=" btn btn-outline-danger">Supprimer</a>
                                        </div>
                                    </div>
                              </div>
                    {% endfor %}
            </div>
            
        {% endif %}

    </div>

</div>

{% endblock %}
